- if !current_reader
  = link_to t('reader_extension.navigation.log_in'), reader_login_url
  = link_to t('reader_extension.navigation.register'), new_reader_url
- else
  = link_to t('reader_extension.navigation.greeting', :name => current_reader.name), reader_profile_url
  - if !current_reader.activated?
    = link_to t('reader_extension.navigation.activate'), reader_activation_url
  - else
    = link_to t('reader_extension.navigation.account'), reader_account_url
    - if current_reader.is_user?
      = link_to t('reader_extension.navigation.admin'), admin_pages_url
    = link_to t('reader_extension.navigation.log_out'), reader_logout_url


